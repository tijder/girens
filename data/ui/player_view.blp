using Gtk 4.0;

template player_view : ScrolledWindow {
  EventControllerKey {
    key-pressed => on_keypress();
  }
  Box {
    vexpand: true;
    orientation: vertical;
    Gtk.Box _video_box {
      height-request: 500;

      EventControllerMotion {
        motion => on_motion();
      }

      Overlay _overlay {
        Stack _stack {
          GestureClick {
	          button: 1;
	          pressed => on_button_press_event();
	          exclusive: true;
          }

          GLArea _frame {
            hexpand: true;
          }
        }

        [overlay]
        Gtk.WindowHandle {
          valign: start;
          Box _controlls_top {
            valign: start;
            opacity: 0.8;

            styles [
              "media_box",
            ]
          }
        }

        [overlay]
        Box _controlls_bottom {
          valign: end;
          opacity: 0.8;

          styles [
            "media_box",
          ]
        }
      }
    }

    Box _box {
      orientation: vertical;
      margin-start: 10;
      margin-end: 10;
      Box {
        margin-top: 10;
        margin-bottom: 5;
        orientation: vertical;

        Label _title_label {
          halign: start;
          label: "Title";
          ellipsize: end;
        }

        Label _subtitle_label {
          halign: start;
          label: "2000";
        }

        Label _left_subtitle_label {
          halign: start;
          label: "2 hr 45 min";
        }

        Label _right_subtitle_label {
          halign: end;
          hexpand: true;
          label: "Action, Comedy";
          justify: right;
          ellipsize: end;
        }

        Box {
          orientation: vertical;
          Box {
            Label _audio_label {
              halign: start;
              label: _("Audio ");
              width-request: 80;
            }

            ComboBox _audio_box {
              halign: start;
            }
          }

         Box {
            Label _sub_label {
              halign: start;
              label: _("Subtitle ");
              width-request: 80;
            }

            ComboBox _subtitle_box {
              halign: start;
            }
          }
        }

        Separator {
          margin-top: 5;
          margin-bottom: 5;
        }

        Label _discription_label {
          halign: start;
          label: "Lorem ipsum dolor sit amet, consectetur adipiscing elit. Curabitur leo nisi, mollis sed suscipit vitae, viverra id erat. Integer vitae orci leo. Nulla ex felis, hendrerit in elit quis, tincidunt sollicitudin tortor. Sed nec porttitor ipsum. Sed quis feugiat velit, nec iaculis mauris. Orci varius natoque penatibus et magnis dis parturient montes, nascetur ridiculus mus. Donec elementum molestie turpis, sed blandit nunc consequat ac. Quisque vel tortor massa. Suspendisse feugiat sem purus, non consectetur lorem convallis non. Integer tempus nulla non libero hendrerit tempor. Aliquam aliquet dolor quis rutrum vulputate. Integer vestibulum fermentum erat, eu interdum purus vulputate ac. Sed ut leo justo. ";
          wrap: true;
        }
      }

      Label _label {
        halign: start;
        margin-top: 20;
        margin-bottom: 5;
        label: _("Ondeck");
      }

      FlowBox _deck_shows_box {
        halign: start;
        homogeneous: true;
        max-children-per-line: 30;
        selection-mode: none;
      }
    }
  }
}