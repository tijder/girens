                                "/include",
                                "/lib/pkgconfig",
                                "/lib/*.la",
                                "/share/man"
                            ],
                            "sources" : [
                                {
                                    "type" : "archive",
                                    "url" : "https://github.com/fribidi/fribidi/releases/download/v1.0.7/fribidi-1.0.7.tar.bz2",
