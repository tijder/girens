                {
                    "name" : "libass",
                    "cleanup" : [
                        "/include",
                        "/lib/*.la",
                        "/lib/pkgconfig"
                    ],
                    "config-opts" : [
                        "--disable-static"
                    ],
                    "sources" : [
                        {
                            "type" : "archive",
