                    "name" : "ffmpeg",
                    "cleanup" : [
                        "/include",
                        "/lib/pkgconfig",
                        "/share/ffmpeg/examples"
                    ],
                    "config-opts" : [
                        "--enable-shared",
                        "--disable-static",
                        "--enable-gnutls",
                        "--disable-doc",
                        "--disable-ffplay",
